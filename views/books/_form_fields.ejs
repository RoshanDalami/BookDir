<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= book.title %> ">
    </div>
    <div class="form-item">
        <label for="name">Author</label>
        <select name="author" id="">
        
            <% authors.forEach(author =>{ %> 
            <% if(author.id === book.author) {%>
            <option selected label ="<%= author.name%>" value="<%= author.id%>"></option>
            <%} else {%>
            <option label="<%= author.name%>" value="<%= author.id%>"></option> 
            <%} %> 
            <% }) %> 
        
        </select>
    </div>
</div>


<div class="form-row">
    <div class="form-item">
        <label for="publish Date">Publish Date</label>
        <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
        <label for="pageCount">Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount == null ? '' : book.pageCount %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="Cover">Cover</label>
        <input type="file" name="cover" class="book-cover filepond" >
    </div>
    <div class="form-item "> 
        <label for="Description">Description</label>
        <textarea  name="description"  > <%= book.description %> </textarea>
    </div>
</div>
